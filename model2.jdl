/**
 * A Contact entitás.
 * <p>
 * A kapcsolattartási információk entitása.
 *
 * @author Kárpáti Gábor
 */
entity Contact {
  /**
   * A cég neve.
   */
  companyName String

  /**
   * Adószám
   */
  taxNumber String

  /**
   * A kapcsolat neve.
   */
  contactName String

  /**
   * Cím.
   */
  address TextBlob

  /**
   * E-mail cím.
   */
  email String

  /**
   * Fax szám.
   */
  fax String

  /**
   * Mobil szám.
   */
  mobile String

  /**
   * Vezetékes telefonszám.
   */
  phone String

  /**
   * Megjegyzés
   */
  note TextBlob
}

